#wp-calendar
	width 100%
	font-size 12px
	font-weight 300
	border-collapse separate
	border-spacing 8px
	margin-left -2px
	caption
		display none
	tbody
		td
			margin-bottom 10px
			text-align center
			-webkit-border-radius 2px
			-moz-border-radius 2px
			-ms-border-radius 2px
			-o-border-radius 2px
			border-radius 2px
			border 1px solid #f4f4f4
			padding 6px
			&:hover
				border-color #e2e2e2
			&.pad
				border 0
		td#today
			color #47C2DC
			border-color #47C2DC
	tfoot
		td#prev
			text-align left
		td#next
			text-align right
	thead
		th
			font-size 13px
			font-weight 400
			color #888
			text-align center
			padding-bottom 10px

#wp-calendar tfoot td#prev a,#wp-calendar tfoot td#next
a
	color #888
	font-size 12px
	font-weight 400
	position relative
	text-transform uppercase
	bottom -9px
	margin-bottom 1px

#wp-calendar tbody td
a,#wp-calendar tfoot td#prev a:hover,#wp-calendar tfoot td#next a:hover
	color #47C2DC

/* My Calendar */
.mc-main th
	background rgba(126, 226, 174, 0.8)
.nextmonth
	opacity 0
